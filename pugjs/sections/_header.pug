section.header#header
    div(class='container')
        div(class=' row align-items-center')
            //- social list icons section
            div(class='header__social col')
                include ../components/_social-list.pug 
            //- header personal section
            div(class='header__personal  text-center col-md-4')
                img(src='../images/header/katen.png' alt='katen' class='img-fluid')
                h1(class='display-3')
                    span(class='display-3--title') katen
                    span(class='display-3--brief')  Minimal Blog & Magazine WordPress Theme
            //- header control section
            div(class='header__control col')
                a(class='header__control--search rounded-circle btn-circular')
                    span
                        i(class='fa-solid fa-magnifying-glass')
                a( class='header__control--menu rounded-circle btn-circular')
                    span
                        i(class='fa-solid fa-bars')
                


